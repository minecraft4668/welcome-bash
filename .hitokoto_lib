# 使用示例函数
get_random_hitokoto() {
    # 获取数组长度
    local length=${#HITOKOTO_LIBRARY[@]}
    
    # 生成随机索引
    local index=$((RANDOM % length))
    
    # 返回随机一言
    echo "${HITOKOTO_LIBRARY[$index]}"
}

# 显示所有一言
show_all_hitokoto() {
    for i in "${!HITOKOTO_LIBRARY[@]}"; do
        printf "%2d: %s\n" "$((i+1))" "${HITOKOTO_LIBRARY[$i]}"
    done
}

# 按类别显示
show_by_category() {
    echo "===== 智慧与哲理 ====="
    for i in {0..4}; do echo "${HITOKOTO_LIBRARY[$i]}"; done
    
    echo -e "\n===== 励志与成长 ====="
    for i in {5..9}; do echo "${HITOKOTO_LIBRARY[$i]}"; done
    
    # 其他类别类似...
}

